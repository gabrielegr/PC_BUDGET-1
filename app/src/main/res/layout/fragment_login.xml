<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginFragment">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_margin_down"
        android:layout_marginTop="@dimen/big_margin_down"
        android:layout_marginEnd="@dimen/big_margin_down"
        android:backgroundTint="@color/greenColor"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="EMAIL"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_margin_down"
        android:layout_marginTop="@dimen/big_left_margin"
        android:layout_marginEnd="@dimen/big_margin_down"
        android:backgroundTint="@color/greenColor"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_margin_down"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="@dimen/margin_btn"
        android:background="@drawable/boton_redondo"
        android:fontFamily="@font/montserrat"
        android:text="Login"
        android:textColor="@color/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="162dp"
        android:layout_height="21dp"
        android:layout_marginTop="@dimen/big_left_margin"
        android:fontFamily="@font/montserrat"
        android:text="No tienes una cuenta?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_margin_down"
        android:layout_marginTop="@dimen/big_left_margin"
        android:layout_marginEnd="@dimen/big_margin_down"
        android:background="@drawable/boton_redondo"
        android:text="Sign up "
        android:textColor="@color/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>